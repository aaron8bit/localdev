#/bin/bash
NAME="aaron8bit/localdev"
VERSION="7"
IMAGE="${NAME}:${VERSION}"

# This is working only but it is fragile
# I am not sure how I want the user mapping to work
# I am not sure how I want directory mapping to work

exec docker run -it \
 --rm=true \
 --net=host \
 --workdir="$(pwd)" \
 --volume=/etc/localtime:/etc/localtime \
 --volume="${HOME}":"${HOME}" \
 --volume="$(pwd)":"$(pwd)" \
 ${IMAGE} \
bash 

